{% extends 'base.html.twig' %}

{% block title %}All categorys
{% endblock %}

{% block body %}
	<h1>Toutes les catégories :
	</h1>
	{% for category in categorys %}
		<div>
			<h2>{{ loop.index }}
				/
				{{ category.name }}</h2>
			{# Lien vers la fiche catégorie : #}
			<a href="{{ path("category_show", { categoryName: category.name }) }}">Voir la fiche</a>
		</div>
	{% else %}
		Aucune catégorie trouvée.
	{% endfor %}
	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>
{% endblock %}
